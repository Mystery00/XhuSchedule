<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/edit_teacher_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            android:text="任课教师"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"/>

        <TextView
            android:id="@+id/edit_teacher_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            android:textSize="@dimen/course_info_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_teacher_tag"/>

        <TextView
            android:id="@+id/edit_time_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            android:text="上课时间"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_teacher_layout"/>

        <TextView
            android:id="@+id/edit_time_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_time_tag"/>

        <TextView
            android:id="@+id/edit_location_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            android:text="上课地点"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_time_layout"/>

        <LinearLayout
            android:id="@+id/edit_location_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_location_tag"/>

        <TextView
            android:id="@+id/edit_color_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            android:text="选择颜色"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_location_layout"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/color_chooser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/time_padding"
            android:paddingEnd="@dimen/course_padding"
            android:paddingStart="@dimen/course_padding"
            android:paddingTop="@dimen/time_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_color_tag"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
