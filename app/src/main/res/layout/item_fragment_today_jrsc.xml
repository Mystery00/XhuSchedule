<layout>

	<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/point"
			android:layout_width="8dp"
			android:layout_height="8dp"
			android:contentDescription="@string/app_name"
			app:layout_constraintBottom_toBottomOf="@id/cardView"
			app:layout_constraintEnd_toStartOf="@id/cardView"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@id/cardView"
			app:srcCompat="@drawable/ic_point" />

		<LinearLayout
			android:id="@+id/cardView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="16dp"
			android:layout_marginBottom="8dp"
			android:background="@drawable/drawable_shape_corner"
			android:backgroundTint="@color/colorTodayBackground"
			android:orientation="vertical"
			android:padding="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<TextView
				android:id="@+id/jrscTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textColor="@color/colorBlackText"
				android:textSize="12sp"
				tools:layout_conversion_absoluteHeight="16dp"
				tools:layout_conversion_absoluteWidth="363dp"
				tools:layout_editor_absoluteX="8dp"
				tools:layout_editor_absoluteY="8dp" />

			<TextView
				android:id="@+id/jrscAuthorTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textColor="@color/colorBlackText"
				android:textSize="12sp"
				tools:layout_conversion_absoluteHeight="16dp"
				tools:layout_conversion_absoluteWidth="355dp"
				tools:layout_editor_absoluteX="8dp"
				tools:layout_editor_absoluteY="24dp" />

		</LinearLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>