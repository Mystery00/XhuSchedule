<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/time_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/time_padding"
        android:paddingEnd="@dimen/course_padding"
        android:paddingStart="@dimen/course_padding"
        android:paddingTop="@dimen/time_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/time_location_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/time_padding"
        android:paddingEnd="@dimen/course_padding"
        android:paddingStart="@dimen/course_padding"
        android:paddingTop="@dimen/time_padding"
        android:text="地点"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_week"/>

    <TextView
        android:id="@+id/time_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/time_padding"
        android:paddingEnd="@dimen/course_padding"
        android:paddingStart="@dimen/course_padding"
        android:paddingTop="@dimen/time_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_location_tag"/>

</android.support.constraint.ConstraintLayout>