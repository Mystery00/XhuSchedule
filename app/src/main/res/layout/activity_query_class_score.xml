<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.activity.QueryClassScoreActivity">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="?attr/colorPrimary"
		app:popupTheme="@style/AppTheme.PopupOverlay" />

	<View
		android:id="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="0.33dp"
		android:background="#e5e5e5" />

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/textViewStudent"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginBottom="8dp"
				android:gravity="center"
				app:layout_constraintBottom_toTopOf="@+id/textViewYear"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" />

			<TextView
				android:id="@+id/textViewYear"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginBottom="8dp"
				android:gravity="center"
				app:layout_constraintBottom_toTopOf="@+id/textViewTerm"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" />

			<TextView
				android:id="@+id/textViewTerm"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginBottom="8dp"
				android:gravity="center"
				app:layout_constraintBottom_toTopOf="@+id/queryButton"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" />

			<Button
				android:id="@+id/queryButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="query"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<com.zyao89.view.zloading.ZLoadingView
				android:id="@+id/loadingView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintBottom_toBottomOf="@id/queryButton"
				app:layout_constraintEnd_toEndOf="@id/queryButton"
				app:layout_constraintStart_toStartOf="@id/queryButton"
				app:layout_constraintTop_toTopOf="@id/queryButton"
				app:z_color="@color/colorAccent"
				app:z_type="SingleCircleBuilder" />

		</androidx.constraintlayout.widget.ConstraintLayout>

		<com.weilylab.xhuschedule.ui.custom.CustomFrameLayout
			android:id="@+id/scoreListLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<com.weilylab.xhuschedule.ui.custom.CustomRecyclerView
				android:id="@+id/recyclerView"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />

		</com.weilylab.xhuschedule.ui.custom.CustomFrameLayout>

	</FrameLayout>

</LinearLayout>