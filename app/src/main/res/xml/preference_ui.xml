<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/screen_category_ui_common">

        <Preference
            android:key="@string/key_reset"
            android:title="@string/title_reset" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/screen_category_ui_today">

        <Preference
            android:key="@string/key_custom_today_opacity"
            android:title="@string/title_custom_today_opacity" />

        <com.jrummyapps.android.colorpicker.ColorPreference
            android:defaultValue="@color/colorWhite"
            android:key="@string/key_custom_today_text_color"
            android:title="@string/title_custom_today_text_color"
            app:cpv_showDialog="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/screen_category_ui_table">

        <Preference
            android:key="@string/key_background_img"
            android:title="@string/title_background_img" />

        <Preference
            android:key="@string/key_custom_table_opacity"
            android:title="@string/title_custom_table_opacity" />

        <com.jrummyapps.android.colorpicker.ColorPreference
            android:defaultValue="@color/colorWhite"
            android:key="@string/key_custom_table_text_color"
            android:title="@string/title_custom_table_text_color"
            app:cpv_showDialog="true" />

        <Preference
            android:key="@string/key_custom_text_size"
            android:title="@string/title_custom_text_size" />

        <Preference
            android:key="@string/key_custom_text_height"
            android:title="@string/title_custom_text_height" />

        <Preference
            android:key="@string/key_custom_table_item_width"
            android:title="@string/title_custom_table_item_width" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/screen_category_ui_profile">

        <Preference
            android:key="@string/key_user_img"
            android:title="@string/title_user_img" />

    </PreferenceCategory>

</PreferenceScreen>